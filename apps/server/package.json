{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "wrangler deploy --dry-run",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"dev": "wrangler dev --port=3000",
		"start": "wrangler dev",
		"deploy": "wrangler deploy",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings"
	},
	"dependencies": {
		"@ai-sdk/google": "^2.0.3",
		"@neondatabase/serverless": "^1.0.1",
		"@orpc/client": "^1.8.6",
		"@orpc/openapi": "^1.8.6",
		"@orpc/server": "^1.8.6",
		"@orpc/zod": "^1.8.6",
		"ai": "^5.0.9",
		"better-auth": "^1.3.7",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.2",
		"hono": "^4.8.2",
		"pg": "^8.14.1",
		"postgres": "^3.4.7",
		"uuid": "^11.1.0",
		"zod": "^4.0.2"
	},
	"devDependencies": {
		"@types/node": "^22.13.11",
		"@types/pg": "^8.11.11",
		"drizzle-kit": "^0.31.2",
		"tsdown": "^0.14.1",
		"typescript": "^5.8.2",
		"wrangler": "^4.23.0"
	}
}
